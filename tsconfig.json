{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es6",
    "importHelpers": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./compiled",
    "paths": {
      "@/*": ["app/*"],
    },
    "lib": ["esnext", "ES2016"]
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "app/**/*.vue"],
  "exclude": ["node_modules"]
}
